<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/background"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTotalName"
            android:textColor="#fff"
            tools:text="LakShadWeeP"
            android:layout_marginRight="7dp"
            style="@style/Totalfontstyle"
            android:textSize="16dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"></TextView>

<LinearLayout
    android:layout_width="65dp"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/tvTotalName"
    android:layout_marginRight="7dp"
    android:orientation="vertical"
    android:id="@+id/casesstate">

    <TextView
        android:id="@+id/TodayCases"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/TotalCases"
        android:layout_gravity="right"
        android:textColor="#ff745b"
        tools:text="+99999"
        style="@style/Labelfontstyle"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/TotalCases"
            android:layout_marginLeft="0dp"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/tvTotalName"
            android:textColor="@color/colortotalconfirmed"
            tools:text="80000"
            style="@style/Totalfontstyle"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

</LinearLayout>

<LinearLayout
    android:layout_width="65dp"
    android:layout_height="wrap_content"
    android:id="@+id/recoveredstate"
    android:layout_marginRight="7dp"
    android:orientation="vertical"
    android:layout_toRightOf="@+id/casesstate">

    <TextView
        android:id="@+id/TodayRecovered"
        android:layout_marginLeft="0dp"
        android:layout_gravity="right"
        android:textColor="#a9ff3c"
        tools:text="+99999"
        style="@style/Labelfontstyle"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/TotalRecovered"
            android:layout_marginLeft="0dp"
            android:layout_gravity="right"
            android:textColor="@color/colortotalrecovered"
            tools:text="80000"
            style="@style/Labelfontstyle"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


</LinearLayout>

<LinearLayout
    android:layout_width="49dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toRightOf="@+id/recoveredstate">

    <TextView
        android:id="@+id/TodayDeaths"
        android:layout_marginLeft="0dp"
        android:layout_gravity="right"
        android:textColor="#b0b0b0"
        tools:text="+999"
        style="@style/Labelfontstyle"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/TotalDeaths"
            android:layout_marginLeft="0dp"
            android:textColor="@color/colortotaldeaths"
            android:layout_gravity="right"
            tools:text="80000"
            style="@style/Totalfontstyle"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

</LinearLayout>

    </RelativeLayout>


</RelativeLayout>